{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@modelcontextprotocol/sdk": ["node_modules/@modelcontextprotocol/sdk"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}